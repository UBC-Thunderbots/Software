    name = "dynamic_parameter_deps",
    python_interpreter_target = "@python_interpreter//:python_bin",
    requirements = "//shared/parameter_v2/generation_scripts:requirements.txt",
)

pip_install(
    name = "nanopb_deps",
    python_interpreter_target = "@python_interpreter//:python_bin",
    requirements = "//external:nanopb_requirements.txt",
)

