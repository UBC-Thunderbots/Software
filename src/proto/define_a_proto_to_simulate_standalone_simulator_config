syntax = "proto3";

package TbotsProto;

message yellow_team_channel
{
    // description: the multicast channel to use to communicate with the yellow robots
      in the simulator

    int min = 0;
    int max = 15;
    int value = 0;
}

message blue_team_channel
{
    // description: The multicast channel to use to communicate with the blue robots
      in the simulator

    int min = 0;
    int max = 15;
    int value = 1;
}

message network_interface 
{
    // description: The network interface to use for multicast network communication.
      Can be found using the `ifconfig` command.
    string value = "wlp3s0";

}

message vision_ipv4_address
{
    // description: TThe IPv4 address to send vision data to
    string value = "224.5.23.2";

}

message vision_port
{
    // description: The port to send vision data to

    int min = 1;
    int max = 65535;
    int value = 10020;
}




