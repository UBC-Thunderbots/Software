{
  "name": "corner-kick",
  "description": "A visualization tool for UBC Thunderbots",
  "main": "public/electron.js",
  "author": {
    "name": "UBC Thunderbots",
    "email": "ubcrobocup@gmail.com"
  },
  "homepage": "./",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"yarn webpack-dev-server --config ./config/webpack.config.js\" \"wait-on http://localhost:8080 && electron .\"",
    "build": "webpack --config ./config/webpack.config.js",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@blueprintjs/core": "3.7.0",
    "@types/pixi.js": "4.8.2",
    "electron-is-dev": "^1.0.1",
    "electron-json-storage": "4.1.4",
    "lodash": "4.17.11",
    "pixi-viewport": "^3.9.0",
    "pixi.js": "4.8.2",
    "react": "16.6.0",
    "react-dom": "16.6.0",
    "react-panelgroup": "1.0.7",
    "react-pixi-fiber": "0.5.0",
    "roslib": "0.20.0",
    "styled-components": "4.0.2",
    "unstated": "2.1.1"
  },
  "devDependencies": {
    "@types/electron-json-storage": "4.0.0",
    "@types/lodash": "4.14.117",
    "@types/react": "16.4.18",
    "@types/react-dom": "16.0.9",
    "@types/styled-components": "4.0.3",
    "concurrently": "^4.0.1",
    "css-loader": "^1.0.0",
    "electron": "3.0.6",
    "electron-builder": "^20.28.4",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "style-loader": "^0.23.1",
    "ts-lint": "4.5.1",
    "ts-loader": "5.2.2",
    "typescript": "3.1.3",
    "wait-on": "^3.1.0",
    "webpack": "4.23.1",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "build": {
    "productName": "CornerKick",
    "artifactName": "${productName}.${ext}",
    "directories": {
      "buildResources": "dist-resources"
    },
    "files": [
      "!**/*.d.ts"
    ],
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Development"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": "false",
      "artifactName": "${productName}-Setup.${ext}",
      "perMachine": true,
      "deleteAppDataOnUninstall": true
    },
    "deb": {
      "packageCategory": "Development"
    }
  }
}
